{
  "builds": [
    {
      "name": "es6-unbundled",
      "browserCapabilities": [
        "es2015"
      ],
      "js": {
        "minify": true,
        "transformModulesToAmd": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": false,
      "addServiceWorker": true
    },
    {
      "name": "es5-bundled",
      "js": {
        "compile": "es5",
        "minify": true,
        "transformModulesToAmd": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": true,
      "addServiceWorker": true
    }
  ],
  "entrypoint": "index.html",
  "extraDependencies": [
    "bower_components/webcomponentsjs/*.js",
    "manifest.json"
  ],
  "lint": {
    "ignoreWarnings": ["databind-with-unknown-property"],
    "rules": ["polymer-2"]
  },
  "shell": "src/view-app.html",
  "sources": [
    "data/**/*", 
    "images/**/*", 
    "lib/**", 
    "bower.json"
  ]
}
