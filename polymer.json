{
  "builds": [
    {
      "name": "es6-bundled",
      "browserCapabilities": [
        "es2015"
      ],
      "js": {
        "minify": true,
        "transformModulesToAmd": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": true,
      "addServiceWorker": true
    },
    {
      "addServiceWorker": true,
      "bundle": true,
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "js": {
        "compile": "es5",
        "minify": true,
        "transformModulesToAmd": true
      },
      "name": "es5-bundled"
    }
  ],
  "entrypoint": "index.html",
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "ignoreWarnings": [
      "databind-with-unknown-property"
    ],
    "rules": [
      "polymer-2"
    ]
  },
  "moduleResolution": "node",
  "npm": true,
  "shell": "src/view-app.html",
  "sources": [
    "data/**/*",
    "images/**/*",
    "lib/**",
    "bower.json"
  ]
}