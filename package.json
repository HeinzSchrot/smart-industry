  },
  "scripts": {
    "build": "polymer build",
    "deploy": "polymer build && firebase deploy",
    "dev": "polymer serve -p 8080",
    "lint": "polymer lint --input src/**/*.html",
    "pre-commit": "lint-staged",
    "serve:dev": "polymer serve",
    "serve:prod": "polymer build && firebase serve --only functions,hosting",
