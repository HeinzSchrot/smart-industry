    "babel-eslint": "^8.2.3",
    "babel-preset-env": "^1.7.0",
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "eslint-config-recommended": "^2.0.0",
    "eslint-plugin-polymer": "^0.2.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.0",
