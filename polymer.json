{
  "builds": [
    {
      "name": "es6-unbundled",
      "browserCapabilities": [
        "es2015"
      ],
      "js": {
        "minify": false,
        "transformModulesToAmd": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": false,
      "addServiceWorker": true
    }
  ],
  "entrypoint": "index.html",
  "extraDependencies": [
    "bower_components/webcomponentsjs/*.js",
    "bower_components/app-storage/app-indexeddb-mirror/*.js",
    "manifest.json"
  ],
  "fragments": [
    "src/view-dashboard.html",
    "src/view-setup.html",
    "src/view-plan.html",
    "src/view-track.html",
    "src/view-settings.html",
    "src/view-login.html",
    "src/view-404.html",
    "src/view-help.html",
    "src/view-term.html",
    "src/view-error.html",
    "src/view-offline.html",
    "src/resources/lazy-resources.html",
    "src/style/shared-styles.html"
  ],
  "lint": {
    "ignoreWarnings": ["set-unknown-attribute","databind-with-unknown-property","databinding-calls-must-be-functions"],
    "rules": ["polymer-2"]
  },
  "shell": "src/view-app.html",
  "sources": [
    "src/**/*", 
    "data/**/*", 
    "images/**/*", 
    "lib/**", 
    "bower.json"
  ]
}
